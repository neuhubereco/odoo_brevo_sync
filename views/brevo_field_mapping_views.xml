<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Brevo Field Discovery Views -->
    <record id="view_brevo_field_discovery_tree" model="ir.ui.view">
        <field name="name">brevo.field.discovery.tree</field>
        <field name="model">brevo.field.discovery</field>
        <field name="arch" type="xml">
            <list string="Brevo Field Discovery" multi_edit="1" create="true" edit="true">
                <header>
                    <button name="%(action_create_all_brevo_fields)d" string="Create All Brevo Fields" type="action" class="btn btn-primary"/>
                </header>
                <field name="brevo_field_name" readonly="1"/>
                <field name="brevo_field_type" readonly="1"/>
                <field name="brevo_field_category" readonly="1"/>
                <field name="odoo_field_name" widget="selection"/>
                <field name="odoo_field_type" readonly="1"/>
                <field name="odoo_field_string" readonly="1"/>
                <field name="is_mapped" widget="boolean" readonly="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <button name="action_create_mapping" string="Create Mapping" type="object" class="btn btn-sm btn-primary" invisible="odoo_field_name == False"/>
            </list>
        </field>
    </record>

    <record id="view_brevo_field_discovery_form" model="ir.ui.view">
        <field name="name">brevo.field.discovery.form</field>
        <field name="model">brevo.field.discovery</field>
        <field name="arch" type="xml">
            <form string="Brevo Field Discovery">
                <header>
                    <button name="action_create_mapping" string="Create Mapping" type="object"
                            class="btn-primary" invisible="is_mapped == True"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="brevo_field_name" readonly="1"/>
                            <span> â†’ </span>
                            <field name="odoo_field_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Brevo Field Information">
                            <field name="brevo_field_name" readonly="1"/>
                            <field name="brevo_field_type" readonly="1"/>
                            <field name="brevo_field_category" readonly="1"/>
                        </group>
                        <group string="Odoo Field Information">
                            <field name="odoo_field_name" widget="selection"/>
                            <field name="odoo_field_type" readonly="1"/>
                            <field name="odoo_field_string" readonly="1"/>
                        </group>
                    </group>

                    <group string="Mapping Status">
                        <field name="is_mapped" readonly="1"/>
                        <field name="mapping_id" readonly="1"/>
                    </group>

                    <group string="Company">
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_brevo_field_discovery_search" model="ir.ui.view">
        <field name="name">brevo.field.discovery.search</field>
        <field name="model">brevo.field.discovery</field>
        <field name="arch" type="xml">
            <search string="Search Brevo Field Discovery">
                <field name="brevo_field_name"/>
                <field name="brevo_field_type"/>
                <field name="brevo_field_category"/>
                <field name="odoo_field_name"/>
                <field name="odoo_field_type"/>
                <filter string="Mapped" name="mapped" domain="[('is_mapped', '=', True)]"/>
                <filter string="Unmapped" name="unmapped" domain="[('is_mapped', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Brevo Category" name="group_brevo_category" context="{'group_by': 'brevo_field_category'}"/>
                    <filter string="Odoo Type" name="group_odoo_type" context="{'group_by': 'odoo_field_type'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Field Discovery -->
    <record id="action_brevo_field_discovery" model="ir.actions.act_window">
        <field name="name">Brevo Field Discovery</field>
        <field name="res_model">brevo.field.discovery</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_brevo_field_discovery_search"/>
        <field name="context">{'search_default_unmapped': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No field discoveries found.
            </p><p>
                Use the "Discover Fields" button in the Brevo Configuration to automatically discover all available field combinations between Brevo and Odoo.
            </p>
        </field>
    </record>

    <!-- Server Action to create all Brevo fields -->
    <record id="action_create_all_brevo_fields" model="ir.actions.server">
        <field name="name">Create All Brevo Fields</field>
        <field name="model_id" ref="model_brevo_config"/>
        <field name="state">code</field>
        <field name="code">
# Get the first active Brevo configuration
config = env['brevo.config'].search([('active', '=', True)], limit=1)
if config:
    result = config.create_all_brevo_fields()
    if result:
        action = result
else:
    action = {
        'type': 'ir.actions.client',
        'tag': 'display_notification',
        'params': {
            'title': 'Error',
            'message': 'No active Brevo configuration found',
            'type': 'danger',
        }
    }
        </field>
    </record>

    <!-- Brevo Field Mapping Views -->
    <record id="view_brevo_field_mapping_tree" model="ir.ui.view">
        <field name="name">brevo.field.mapping.tree</field>
        <field name="model">brevo.field.mapping</field>
        <field name="arch" type="xml">
            <list string="Brevo Field Mappings">
                <field name="name"/>
                <field name="brevo_field_name"/>
                <field name="odoo_field_name"/>
                <field name="field_type"/>
                <field name="is_required"/>
                <field name="is_readonly"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_brevo_field_mapping_form" model="ir.ui.view">
        <field name="name">brevo.field.mapping.form</field>
        <field name="model">brevo.field.mapping</field>
        <field name="arch" type="xml">
            <form string="Brevo Field Mapping">
                <header>
                    <button name="create_odoo_field" string="Create Odoo Field" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Field Mapping Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Field Information">
                            <field name="name"/>
                            <field name="brevo_field_name"/>
                            <field name="odoo_field_name"/>
                            <field name="field_type"/>
                        </group>
                        <group string="Field Properties">
                            <field name="is_required"/>
                            <field name="is_readonly"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group string="Field Configuration">
                        <group>
                            <field name="default_value"/>
                            <field name="help_text"/>
                        </group>
                        <group>
                            <field name="many2one_model" invisible="field_type != 'many2one'"/>
                            <field name="many2many_model" invisible="field_type != 'many2many'"/>
                        </group>
                    </group>
                    
                    <group string="Selection Values" invisible="field_type != 'selection'">
                        <field name="selection_values" widget="text" placeholder='[["value1", "Label 1"], ["value2", "Label 2"]]'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_brevo_field_mapping_search" model="ir.ui.view">
        <field name="name">brevo.field.mapping.search</field>
        <field name="model">brevo.field.mapping</field>
        <field name="arch" type="xml">
            <search string="Search Brevo Field Mappings">
                <field name="name"/>
                <field name="brevo_field_name"/>
                <field name="odoo_field_name"/>
                <field name="field_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Required" name="required" domain="[('is_required', '=', True)]"/>
                <filter string="Read Only" name="readonly" domain="[('is_readonly', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Field Type" name="group_type" context="{'group_by': 'field_type'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_brevo_field_mapping" model="ir.actions.act_window">
        <field name="name">Brevo Field Mappings</field>
        <field name="res_model">brevo.field.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_brevo_field_mapping_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Brevo Field Mappings found.
            </p><p>
                Create field mappings to synchronize Brevo contact attributes with Odoo partner fields.
            </p>
        </field>
    </record>

</odoo>
