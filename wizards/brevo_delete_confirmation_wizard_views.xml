<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Brevo Delete Confirmation Wizard Form View -->
        <record id="view_brevo_delete_confirmation_wizard_form" model="ir.ui.view">
            <field name="name">brevo.delete.confirmation.wizard.form</field>
            <field name="model">brevo.delete.confirmation.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Deletion">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> You are about to delete %d partner(s) that have Brevo data.
                        <br/>
                        <strong>%d partner(s)</strong> will be deleted from both Odoo and Brevo.
                    </div>
                    
                    <group>
                        <field name="partner_ids" widget="many2many_tags" readonly="1"/>
                        <field name="brevo_partner_count" invisible="1"/>
                    </group>
                    
                    <group>
                        <field name="delete_from_brevo"/>
                    </group>
                    
                    <group>
                        <field name="confirmation_text" placeholder="Type DELETE to confirm"/>
                    </group>
                    
                    <footer>
                        <button name="action_confirm_delete" string="Delete" type="object" class="btn btn-danger" 
                                attrs="{'invisible': [('confirmation_text', '!=', 'DELETE')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Brevo Delete Confirmation Wizard Action -->
        <record id="action_brevo_delete_confirmation_wizard" model="ir.actions.act_window">
            <field name="name">Confirm Deletion</field>
            <field name="res_model">brevo.delete.confirmation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
